<div id="navbar" class="container-fluid fixed-top">
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a asp-controller="home" asp-action="index" class="navbar-brand">
                <h1 class="text-primary display-6">Qfresh<i class="fas fa-leaf"></i></h1>
            </a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a asp-controller="home" asp-action="index" class="nav-item nav-link @ViewData["HomePage"]">Trang chủ</a>
                    <a asp-controller="products" asp-action="index" class="nav-item nav-link @ViewData["Shop"]">Sản phẩm</a>
                    <a asp-controller="blogs" asp-action="index" class="nav-item nav-link @ViewData["Blogs"]">Tin tức</a>
                    <a asp-controller="contact" asp-action="index" class="nav-item nav-link @ViewData["Contact"]">Liên hệ</a>
                    <a asp-controller="about" asp-action="index" class="nav-item nav-link @ViewData["About"]">Về chúng tôi</a>
                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" title="Tìm kiếm" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                    <a asp-controller="cart" asp-action="index" class="position-relative me-4 my-auto" title="Giỏ hàng">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                        <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">0</span>
